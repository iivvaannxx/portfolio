{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",

    "paths": {
      "@app/*": ["./source/*"],
      "@lib/*": ["./source/lib/*"],

      "@assets/*": ["./source/assets/*"],
      "@components/*": ["./source/components/*"],
      "@layouts/*": ["./source/layouts/*"],
      "@modules/*": ["./source/modules/*"]
    },

    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "skipLibCheck": false,
    "verbatimModuleSyntax": true
  },

  "exclude": ["./functions/**/*"]
}
