{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",

    "paths": {
      "@root/*": ["./*"],

      "@app/*": ["./source/*"],
      "$lib/*": ["./source/*"],
      "@modules/*": ["./source/modules/*"]
    },

    "verbatimModuleSyntax": true
  }
}
