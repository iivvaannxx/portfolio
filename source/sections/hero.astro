  */

// Retrieve the localized strings for the hero section.
const { locale } = Astro.locals;
const translations = getTranslations(locale);
const t = translations.sections.hero;
---

<script>
  import tippy from "tippy.js";
  tippy("ul[data-socials] a[data-tippy-content]", {
    placement: "bottom",
    theme: "link",
    offset: [0, 16],

    animation: "scale",
    inertia: true,
  });
</script>

<section
  data-scroll-away
  class="mx-auto grid max-w-screen-2xl grid-cols-10 items-center p-12"
>
  <div class="col-span-4">
    <h1 class="animate-fade-up font-header">
      <span class="block text-lg font-semibold text-foreground/50"
        >{t.greeting}</span
      >
      <span
        class="block text-7xl/tight font-extrabold tracking-wider opacity-90"
        >Ivan Porto</span
      >
      <span class="mt-4 block text-3xl/tight font-bold text-foreground/50"
        >I'm a <span class="text-primary/80">software</span> developer.</span
      >
    </h1>

    <p
      class="mt-16 max-w-2xl animate-fade-up text-balance text-base text-foreground/65 animate-delay-300"
      set:html={t.introduction}
      data-hero-p
    />

