<style>
  section {
    min-height: var(--content-height);
  }

  [data-hero-p] {
    /** If pretty is supported it will override "balance". */
    text-wrap: balance;
    text-wrap: pretty;
  }

  :global([data-hero-p] > strong) {
    color: theme("colors.primary.DEFAULT");
    opacity: 0.9;
  }

  :global([data-hero-p] > b) {
    color: theme("colors.foreground / 0.70");
  }

  :global(.tippy-box[data-theme~="link"]) {
    background-color: theme("colors.accent.DEFAULT");
    font-family: theme("fontFamily.header");
    padding: 0.2em;

    .tippy-arrow::before {
      border-bottom-color: inherit;
    }

    .tippy-content {
      font-weight: 450;
      margin-top: 0.15em;

      color: theme("colors.accent.foreground");
    }
  }
</style>
