 */
  article {
    display: grid;
    grid-template-rows: auto auto 1fr;
  }

  [data-emoji] {
    max-width: min(100%, 7rem);
  }

  [data-emoji] > picture {
    padding-inline: 10%;
  }

  @media (768px <= width <= 1024px) {
    article {
      column-gap: 2rem;

      grid-template-rows: auto;
      grid-template-columns: 0.6fr 0.4fr;
      grid-template-areas:
        "title emojis"
        "content emojis";
    }

    article > header {
      grid-area: title;
    }

    article > div:first-of-type {
      grid-area: content;
    }

    article > div:last-of-type {
      grid-area: emojis;
    }
  }
</style>
