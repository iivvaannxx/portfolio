---
import "@app/styles/index.css";
import "tippy.js/animations/scale.css";
import "tippy.js/dist/tippy.css";

import { cn } from "@app/utils";

type Props = {
  title?: string;
  description?: string;
  bodyClass?: string;
};

const { title, description, bodyClass } = Astro.props;
---

<html
  lang={Astro.locals.locale}
  class="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />

    <meta
      name="description"
      content={description}
    />

    <meta
      name="robots"
      content="noindex,follow"
    />

    <link
      rel="sitemap"
      href="/sitemap-index.xml"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />

    <script src="@app/lib/polyfills"></script>
    <slot name="head" />

    <title>{title}</title>
  </head>

  <body
    class={cn(
      "overflow-x-clip bg-background font-sans text-foreground antialiased",
      bodyClass,
    )}
  >
    <slot />
  </body>
</html>
