---
import Base from "@app/layouts/base.astro";
import Header from "@app/layouts/header.astro";
import Footer from "@app/layouts/footer.astro";

import ScrollToTop from "@app/components/scroll-to-top.astro";
import SocialsSidelist from "@app/components/social-sidelist.astro";
/* import { Hero } from "@app/modules/three-fiber/components/hero";
 */
---

<Base>
  <Fragment slot="body">
    <Header />

    <aside
      class="fixed inset-y-0 left-0 z-[1] hidden w-[64px] flex-col items-center justify-end gap-4 lg:flex"
    >
      <SocialsSidelist />
    </aside>

    <main class="size-full">
      <slot name="main" />
    </main>

    <div class="pointer-events-none fixed inset-0 isolate h-full w-full">
      <ScrollToTop class="absolute bottom-0 right-0 m-12" />
    </div>

    <Footer />
  </Fragment>
</Base>
