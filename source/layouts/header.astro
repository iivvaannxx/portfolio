---
import { cn } from "@app/utils";
import { Hamburguer, NavLinks } from "@modules/navigation";
import type { HTMLAttributes } from "astro/types";

export type Props = HTMLAttributes<"header"> & {};
const { class: clazz, ...props } = Astro.props;
---

<header
  class={cn(
    "fixed inset-x-0 top-0 z-50 min-h-header content-center bg-background",
    clazz,
  )}
  {...props}
>
  <div
    class="mx-auto flex max-w-screen-xl justify-around px-10 py-4 font-header xl:px-6"
  >
    <NavLinks class="hidden w-full justify-between lg:flex" />
    <Hamburguer class="ml-auto lg:hidden" />
  </div>
</header>
