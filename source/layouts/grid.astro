---
import type { HTMLTag, Polymorphic } from "astro/types";

/** The props received by the Grid layout component. */
export type Props<Tag extends HTMLTag = "div"> = Polymorphic<{ as: Tag }> & {
  cols: number;
  rows: number;
};

const { as: Tag = "div", cols, rows, ...props } = Astro.props;
---

<Tag
  {...props}
  style={`--cols: ${cols}; --rows: ${rows}; ${props.style}`}
  data-grid
>
  <slot />
</Tag>

<style>
  [data-grid] {
    display: grid;
    grid-template-columns: repeat(var(--cols), 1fr);
    grid-template-rows: repeat(var(--rows), 1fr);
  }
</style>
