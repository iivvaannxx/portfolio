---
import { cn } from "@app/utils";
import type { Polymorphic } from "astro/types";

type Props<Tag extends "div" | "article"> = Polymorphic<{ as: Tag }>;
const { as: Tag = "div", class: clazz, ...props } = Astro.props;
---

<Tag
  class={cn(
    "flex flex-col justify-center rounded-lg border border-border bg-card p-4",
    clazz,
  )}
  {...props}
>
  <slot />
</Tag>
