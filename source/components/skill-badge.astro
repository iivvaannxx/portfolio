---
import { Icon } from "astro-icon/components";
import { skills } from "@app/assets/data/skills";
import Badge, { type BadgeProps } from "./base/badge.astro";

export type Props = BadgeProps & {
  skill: string;
  name?: string;
};

const { skill, name = skill, ...props } = Astro.props;
---

<Badge
  {...props}
  class="space-x-2 px-4 py-2 font-semibold"
>
  <Icon
    name={`skills/${skill}`}
    class="size-4"
  />
  <span>{skills.find((skill) => skill.icon === name)?.name}</span>
</Badge>
