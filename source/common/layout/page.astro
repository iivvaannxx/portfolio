---
import '@app/assets/styles/index.css'

import Header from '@app/common/layout/header.astro'
---

<!DOCTYPE html>

<html lang='en'>

  <head>

    <meta charset='utf-8'/>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'/>

    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg'/>

    <slot name='head'/>

  </head>

  <body class='debug-screens bg-background font-sans text-foreground antialiased'>

    <Header />

    <main class='relative mx-auto w-full px-12 container'>
      <slot name='main' />
    </main>

  </body>

</html>

<style>

  :root {
    --header-height: 96px;
  }

  * {
    -webkit-tap-highlight-color: transparent;
    box-sizing: border-box;
  }

  html {

    scroll-behavior: smooth;
    width: 100%;
    height: 100%;

    /** If supported this will be applied. */
    height: 100dvh;
  }

  body {

    width: 100%;

    min-height: 100%;
    min-height: 100dvh;
  }

</style>
