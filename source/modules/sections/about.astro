---
import { useTranslations } from "@app/modules/i18n/lib/hooks/use-translation";
import UserLocation from "@app/ui/components/user-location.astro";

const t = useTranslations(Astro.locals.locale);
---

<section
  id="hero"
  class="relative flex size-full flex-col items-center justify-center"
>
  <div
    id="hero-bg"
    class="absolute inset-0 -z-10 size-full items-center px-5 py-24"
  >
  </div>
  <div class="container mx-auto mb-16 flex flex-col p-12 text-left">
    <h1 class="block">
      <span class="block text-5xl font-semibold text-foreground/50">
        {t("sections.about.greeting")}
      </span>

      <span class="block text-[8rem] font-extrabold text-primary">
        Ivan Porto
      </span>

      <span class="text-6xl font-bold">
        <span class="text-foreground/50">
          {t("sections.about.headline.left")}
        </span>
        <span class="text-foreground">
          {t("sections.about.headline.main")}
        </span>
        <span class="text-foreground/50">
          {t("sections.about.headline.right")}
        </span>
      </span>
    </h1>

    <p class="mt-8 text-balance text-3xl font-medium text-foreground/75">
      {t("sections.about.description")}
    </p>
  </div>

  <div
    class="absolute bottom-0 right-0 flex items-center p-12 text-foreground/80"
  >
    <UserLocation class="text-xl font-semibold" />
  </div>
</section>

<style>
  #hero {
    height: 100vh;
    height: 100dvh;
  }

  #hero-bg {
    background: radial-gradient(125% 125% at 50% 10%, #000 40%, #63e 100%);
  }
</style>
