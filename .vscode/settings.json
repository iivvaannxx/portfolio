{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.organizeImports.biome": "always"
  },

  "eslint.enable": false,
  "explorerExclude.backup": {},
  "css.lint.unknownAtRules": "ignore",

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.direnv": true,
    "**/node_modules": true
  }
}
